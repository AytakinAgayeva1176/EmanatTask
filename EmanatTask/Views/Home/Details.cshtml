@model EmanatTask.Models.Movie

    <div class="container border-bottom py-3 d-flex justify-content-between">
        <h1>@Model.Title</h1>  
        <a asp-action="Order" asp-controller="Order" asp-route-title="@Model.Title" asp-route-imdbID="@Model.imdbID" class="orderButton">Order Now</a>
